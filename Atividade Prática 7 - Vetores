Var
// Seção de Declarações das variáveis
nom: vetor [1..10] de caractere
nota: vetor [1..10] de inteiro
contador: inteiro
contadorNota: inteiro
media: real
soma: real


Inicio
// Nome dos alunos

soma <- 0

para contador de 1 ate 10 faca

escreval("Digite o nome do aluno de número " , contador , " de 10")
leia(nom[contador] )

escreval

fimpara

escreval

escreval("O nome de seus alunos são : ")

para contador de 1 ate 10 faca

escreval

escreval("Nome do aluno " , contador , " : " , nom[contador])

fimpara

escreval

para contadorNota de 1 ate 10 faca

escreval(" Por favor digite a nota do aluno de número " , contadorNota , " de 10 ")
leia(nota[contadorNota])

fimpara

escreval (" A nota de seus alunos foram : ")

para contadorNota de 1 ate 10 faca
escreval(" A nota do aluno " , contadorNota , " foi :  " , nota[contadorNota])
soma <- nota[contadorNota]+soma
fimpara

//resultados
media <- soma/contadorNota
escreval

escreval(" A média de notas da turma foi :  " , media)

Fimalgoritmo
