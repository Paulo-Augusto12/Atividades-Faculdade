// PARTE A
escreva( " Olá, por favor diga seu nome : " )
leia (nome)
escreval ( "Olá  " , nome , "  muito prazer ! ")

escreval

escreva ( nome , " ,este algoritmo irá lhe apresentar um número maior entre dois números escolhidos por você")

escreval

escreva ( "por favor digite um número: ")
leia (NUM1)

escreval

escreva ( " muito bem, agora por favor, digite o segundo número : " )
LEIA (NUM2)

escreval

escreva ( "Perfeito, os números digitados por você foram " , NUM1 , " e " , NUM2)

escreval

SE ( (NUM1 < NUM2) ) ENTAO
escreval ( "O menor número é o" , NUM1)

SENAO

escreval ( "O menor número é o" , NUM2)

FIMSE

// PARTE B

